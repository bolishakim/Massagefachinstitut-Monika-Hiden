# Database
DATABASE_URL="postgresql://postgres:270787@localhost:5432/practice_management?schema=public&connection_limit=20&pool_timeout=20&connect_timeout=60&socket_timeout=60"

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=300000

# Prisma Logging Configuration
# Options: none, error, warn, info, query, all
PRISMA_LOG_LEVEL=warn

# Server Configuration
NODE_ENV=development
PORT=3050
CORS_ORIGIN=http://localhost:3100

# JWT Configuration
JWT_SECRET="super-secret-jwt-key-for-development-only-change-in-production-12345"
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET="super-secret-refresh-key-for-development-only-change-in-production-67890"
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX=1000

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourapp.com