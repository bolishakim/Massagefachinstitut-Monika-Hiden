# Database
DATABASE_URL="postgresql://practice_user:practice_password@localhost:5432/practice_management?schema=public"

# Prisma Logging Configuration
# Options: none, error, warn, info, query, all
# none = no logging, error = errors only, warn = errors + warnings
# info = errors + warnings + info, query = all + queries, all = everything
PRISMA_LOG_LEVEL=none

# Server Configuration
NODE_ENV=development
PORT=3050
CORS_ORIGIN=http://localhost:3100

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-64-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-different-from-jwt
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12

# HTTPS/TLS Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
REDIRECT_TO_HTTPS=true

# Cookie Security
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
COOKIE_HTTP_ONLY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Multi-Factor Authentication
MFA_ENCRYPTION_KEY=your-32-character-encryption-key-here

# GDPR Data Retention (in days)
AUDIT_LOG_RETENTION=2555
SESSION_DATA_RETENTION=90
MEDICAL_DATA_RETENTION=10950

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@your-domain.com

# Austrian Compliance Settings
TIMEZONE=Europe/Vienna
DATA_CONTROLLER_NAME=Your Medical Center
DATA_CONTROLLER_EMAIL=privacy@your-domain.com
DPO_EMAIL=dpo@your-domain.com

# Development Only (remove in production)
DISABLE_HTTPS_REDIRECT=false
ALLOW_HTTP_HEALTH_CHECKS=true